                    <field name="name"/>
                    <field name="patient" class="text-uppercase"/>
                    <field name="services" readonly="1" force_save="1" options="{'no_open':True}"
                           widget="many2many_tags" />
                    <field name="doctor"/>
                    <field name="evaluation_start_date"/>
                    <field name="state"  invisible="1"/>
                </tree>
            </field>
        </record>

